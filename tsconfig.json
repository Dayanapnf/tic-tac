{
    "include": ["./src/**/*"],
    "compilerOptions": {
      "strict": true,
      "esModuleInterop": true,
      "lib": ["dom", "es2015", "es2016", "es2017"],
      "module": "es2020",
      "moduleResolution": "node",
      "target": "es6",
      "jsx": "react-jsx",
      "skipLibCheck": true,
      "plugins": [{ "name": "typescript-plugin-css-modules" }]
    }
  }
  